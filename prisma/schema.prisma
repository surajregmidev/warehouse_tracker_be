generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
  EMPLOYEE
  MNTNANCEPERSON
}

enum Billtype {
  SALE
  PURCHASE
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  phoneNo String?
  password String
  fullName String?
  officeName String?
  isVerified Boolean?
  verificationToken String?
  passwordResetToken String? 
  posswordResetExpiryDate DateTime?
  provider String?
  profileImageUrl String?
  refreshToken String?
  role Role @default(CUSTOMER)
  device_token_firebase String?
  isBannedByAdmin Boolean? @default(false)
    
  address Address?

  bills  Bill[]

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

}

model Item{
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String
  code String?
  quantity Int
  costprice Float
  sellingprice Float
  storinglocation String

  Billdetail Billdetail?

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())
}

model Bill{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user   User @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  billtype Billtype @default(SALE)
  billdetails Billdetail[] @relation("billdetails")

  totalPrice Float

  createdAt DateTime? @default(now())
  updatedAt DateTime? @default(now())

}



model Billdetail{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  item   Item @relation(fields: [itemId], references: [id])
  itemId String @unique @db.ObjectId

  bill   Bill @relation("billdetails",fields: [billId], references: [id])
  billId String @unique @db.ObjectId

  quantity Int
  rate Float

}

model Address{
  id     String @id @default(auto()) @map("_id") @db.ObjectId

  user   User @relation(fields: [userId], references: [id])
  userId String @unique @db.ObjectId

  address String
  suit String?
  city String
  province String
  postalCode String
  contactNumber String
  
}





